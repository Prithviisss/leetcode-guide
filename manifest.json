{
  "manifest_version": 3,
  "name": "LeetCode AI Hints",
  "version": "1.0",
  "description": "AI-powered hints for LeetCode problems (no full solutions)",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}



